{
  "rules": {
    ".read": "true",  
    ".write": "true",  
    "entries": {
      "$entry": {  // For each entry...
        "date": {
          ".validate": "newData.isString() && newData.val().matches(/\\d{4}-\\d{2}-\\d{2}/)"  // The date should be a string in ISO 8601 format.
        },
        "successes": {
          "$success": {  // For each success in the array...
            ".validate": "newData.isBoolean()"  // Each success should be a boolean.
          }
        },
        "$other": {
          ".validate": false  // No other children allowed.
        }
      }
    }
  }
}
